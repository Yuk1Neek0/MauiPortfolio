@* Components/ProjectCard.razor *@
@using Microsoft.AspNetCore.Components.Routing

<div class="card">
  <h3>@Title</h3>
  <p>@Summary</p>

    @if (!string.IsNullOrWhiteSpace(Link))
    {
        <NavLink class="view-link" href="@Link">View →</NavLink>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Summary { get; set; } = string.Empty;
    [Parameter] public string Link { get; set; } = string.Empty;
}

<style>
  .card { padding:16px; border:1px solid #2d2d2d; border-radius:10px; background:#0f1520aa; }
  .card h3 { margin:0 0 8px; }
  .view-link { text-decoration:none; }
</style>
